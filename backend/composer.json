{
  "name": "sample/todo-php-vue",
  "require": {},
  "require-dev": {
    "phpunit/phpunit": "^10",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "classmap": [
      "TodoRepository.php"
    ]
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse --no-progress --memory-limit=512M",
    "phpcs": "phpcs --standard=phpcs.xml --extensions=php backend",
    "phpcbf": "phpcbf --standard=phpcs.xml --extensions=php backend"
  }
}