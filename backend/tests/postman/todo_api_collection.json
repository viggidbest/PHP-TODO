{
  "info": {
    "name": "Todo API Tests (Failing)",
    "_postman_id": "fail-demo-collection",
    "description": "Deliberately failing tests for the PHP Todo API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:8000"
    }
  ],
  "item": [
    {
      "name": "GET /api/todos - Expect Wrong Status",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Accept", "value": "application/json" }
        ],
        "url": {
          "raw": "{{base_url}}/api/todos",
          "host": ["{{base_url}}"],
          "path": ["api","todos"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// This will fail because GET /api/todos returns 200",
              "pm.test('Status code is 404', function () {",
              "    pm.response.to.have.status(404);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "POST /api/todos - Missing Title",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"title\": \"\" }"
        },
        "url": {
          "raw": "{{base_url}}/api/todos",
          "host": ["{{base_url}}"],
          "path": ["api","todos"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// This will fail because API returns 422, but we assert 201",
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "GET /api/todos/9999 - Nonexistent ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/todos/9999",
          "host": ["{{base_url}}"],
          "path": ["api","todos","9999"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// This will fail if API correctly returns 404",
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
